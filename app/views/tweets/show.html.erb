<div class="wrapper">
  <div class="contents">
    <div class="content">
      <div class="content__top">
        <div class="content__top__lyric">
          <%= @tweet.lyric %>
        </div>
        <div class="content__top__info">
          <div class="content__top__info__artist">
            @ <%= @tweet.artist%>
          </div>
          <div class="content__top__info__sn">
            â™ª<%= @tweet.song_name%>
          </div>
        </div>
      </div>
      <div class="content__bottom">
        <div class="content__bottom__text">
          <%= @tweet.text%>
        </div>
        <div class="content__bottom__link">
          <a href="<%= @tweet.link %>" target="_blank">Music Link</a>
        </div>
        <% if user_signed_in? && @tweet.user_id == current_user.id%>
          <div class="content__bottom__trash-btn">
            <%= link_to tweet_path(@tweet.id), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="comment_form">
    
  </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title>Lyricers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="title">
        Lyricers
      </div>
      <% if user_signed_in? %>
        <div class="user__btn--true">
          <div class="user__btn--true__new">
            <%= link_to new_tweet_path, method: :get do %>
              <i class="fas fa-plus"></i>
            <% end %>
          </div>
          <div class="user__btn--true__btn">
            <%= link_to "Log-out", "/users/sign_out", method: :delete, class: "btn btn-info btn-lg" %>
          </div>
        </div>
      <% else %>
         <div class="user__btn">
          <div class="user__btn-1">
            <%= link_to "Sign-in", "/users/sign_up", class: "btn btn-light btn-lg user__btn-1__1", method: :get %>
          </div>
          <div class="user__btn-2">
            <%= link_to "Log-in", "/users/sign_in", class: "btn btn-dark btn-lg user__btn-2__1", method: :get %>
          </div>
        </div>
      <% end %>
    </header>
    <div class="notifications">
      <% flash.each do |key, value| %>
        <div class="<%= key %>">
          <%= value %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>


